{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/jgatlit/projects/visual-flow/prompt-flow-frontend"]
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--browser",
        "chromium",
        "--headless",
        "--no-sandbox",
        "--isolated"
      ],
      "env": {
        "PLAYWRIGHT_CHROMIUM_ARGS": "--disable-gpu --disable-software-rasterizer --disable-dev-shm-usage --no-sandbox --disable-accelerated-2d-canvas --disable-extensions --disable-background-timer-throttling"
      }
    }
  }
}
